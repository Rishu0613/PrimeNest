@page
@using PrimeNest.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@if (User.IsInRole(SD.Role_Admin))
{
    <div class="container">
        
        <div style="margin-top: 150px;">
            <div class="offset-8">
