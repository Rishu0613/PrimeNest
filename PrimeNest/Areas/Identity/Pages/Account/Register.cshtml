@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

 <script>
    @functions {
        public string GetProviderFirstLetter(string providerName)
        {
            return providerName.Length > 0 ? providerName.Substring(0, 1).ToUpper() : string.Empty;
        }
    }




</script>