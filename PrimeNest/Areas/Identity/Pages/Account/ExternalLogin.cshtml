@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}
<div class="container" style="margin-top: 150px;">

    <div class="text-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <h2>Associate your @Model.ProviderDisplayName account</h2>
        <p class="text-muted">You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>. Please enter your details to complete the registration.</p>
    </div>

    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="Input_Email" class="form-label">Email</label>
            <input asp-for="Input.Email" id="Input_Email" class="form-control" autocomplete="email" placeholder="Enter your email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Input_Name" class="form-label">Name</label>
            <input asp-for="Input.Name" id="Input_Name" class="form-control" autocomplete="username" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Input_ProfilePic" class="form-label">Profile Picture</label>
            <input type="file" asp-for="Input.ProfilePic" id="Input_ProfilePic" class="form-control" />
            <span asp-validation-for="Input.ProfilePic" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Input_PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="Input.PhoneNumber" id="Input_PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Input_StreetAddress" class="form-label">Street Address</label>
                <input asp-for="Input.StreetAddress" id="Input_StreetAddress" class="form-control" />
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label for="Input_City" class="form-label">City</label>
                <input asp-for="Input.City" id="Input_City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Input_State" class="form-label">State</label>
                <input asp-for="Input.State" id="Input_State" class="form-control" />
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label for="Input_PostalCode" class="form-label">Postal Code</label>
                <input asp-for="Input.PostalCode" id="Input_PostalCode" class="form-control" />
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="w-100 btn btn-primary btn-lg">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
