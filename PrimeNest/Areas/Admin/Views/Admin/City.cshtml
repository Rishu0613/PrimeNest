@model PrimeNest.Models.City
@{
    ViewData["Title"] = "City";
    var title = Model.Id != 0 ? "Edit City" : "ADD City";
    var saveupdate = Model.Id != 0 ? "Update" : "Save";

}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add City</h5>

        <!-- No Labels Form -->
        <form method="post"class="row g-3">
            <div class="col-md-6">
                <input asp-for="Name" type="text" class="form-control" placeholder="City">
            </div>
            <div class="col-md-4">
                <select asp-for="StateId" id="inputState" name="StateId" class="form-select">
                    <option selected disabled>Choose...</option>
                    @foreach (var state in ViewBag.State)
                    {
                        <option value="@state.Id">@state.Name</option>
                    }
                </select>
            </div>

            <div class="col-md-2">
                <input asp-for="ZipCode"  class="form-control" placeholder="Zip">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End No Labels Form -->

    </div>
</div>


<h1 class="text-center">City</h1>
<section class="section">

    <div class="container border rounded shadow p-4 bg-light">
        <table id="tblcity" class="table table-striped table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>State</th>
                    <th>ZipCode</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</section>

@section Scripts {
    <script src="~/js/StateCity.js"></script>
}
