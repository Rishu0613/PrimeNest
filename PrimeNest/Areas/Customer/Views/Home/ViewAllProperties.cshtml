@model IEnumerable<PrimeNest.Models.Property>

@{
    ViewData["Title"] = "View All Properties";
}

<div class="hero page-inner overlay"
     style="background-image: url('@Url.Content("~/images/hero_bg_1.jpg")')">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-9 text-center mt-5">
                <h1 class="heading" data-aos="fade-up">Properties</h1>
                <nav aria-label="breadcrumb" data-aos="fade-up" data-aos-delay="200">
                    <ol class="breadcrumb text-center justify-content-center">
                        <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active text-white-50" aria-current="page">
                            Properties
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="section section-properties">
    <div class="container">
        <h1 class="text-center m-2 p-2">All Properties</h1>
        <div class="row">
            <div class="col-12">
                <div class="property-slider-wrap">
                    <div class="property-slider">
                        @foreach (var prop in Model)
                        {
                            <div class="property-item">
                                <a asp-action="Detail" asp-route-id="@prop.Id" class="img">
                                    @if (prop.PropertyImages != null && prop.PropertyImages.Any())
                                    {
                                        <img src="@prop.PropertyImages.First().ImageUrl"
                                             alt="Property Image"
                                             class="img-fluid"
                                             style="height: 350px; object-fit: cover; border-radius: 10px;" />
                                    }
                                    else
                                    {
                                        <img src="~/images/no-image-available.jpg"
                                             alt="No Image Available"
                                             class="img-fluid"
                                             style="height: 350px; object-fit: cover; border-radius: 10px;" />
                                    }
                                </a>

                                <div class="property-content">
                                    <div class="price mb-2">
                                        <span>$@prop.Price</span>
                                    </div>
                                    <div>
                                        <span class="d-block mb-2 text-black-50">@prop.Address</span>
                                        <span class="city d-block mb-3">@prop.City.Name</span>
                                        <div class="specs d-flex mb-4">
                                            <span class="d-block d-flex align-items-center me-3">
                                                <i class="fas fa-earth-americas"></i>
                                                <span class="caption">&nbsp;@prop.PropertyType.Name</span>
                                            </span>
                                            <span class="d-block d-flex align-items-center">
                                                <i class="fas fa-money-bills"></i>
                                                <span class="caption">&nbsp;@prop.status</span>
                                            </span>
                                        </div>
                                        <a asp-action="Detail" asp-route-id="@prop.Id"
                                           class="btn btn-primary py-2 px-3">See details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div id="property-nav" class="controls" tabindex="0" aria-label="Carousel Navigation">
                        <span class="prev" data-controls="prev" aria-controls="property" tabindex="-1">Prev</span>
                        <span class="next" data-controls="next" aria-controls="property" tabindex="-1">Next</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
